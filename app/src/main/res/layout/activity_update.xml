<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".ui.activity.UpdateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="200px"
        android:orientation="horizontal">


        <bob.eve.walle.util.OvalImageView
            android:id="@+id/imageView3"
            android:layout_width="700px"
            android:layout_height="200px"
            android:layout_weight="1"

            />

        <LinearLayout
            android:layout_width="500px"
            android:layout_height="200px"
            android:layout_marginBottom="10px"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="400px"
                android:layout_height="100px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="260px"
                    android:layout_height="100px"
                    android:text="111111"
                    android:textSize="60px" />

                <ImageView
                    android:id="@+id/iV_pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/pinglun" />

            </LinearLayout>

            <bob.eve.walle.widget.StarBarView
            android:id="@+id/sbv_starbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            app:space_width="10dp"
            app:star_height="25dp"
            app:star_hollow="@mipmap/ic_star_yellow_normal"
            app:star_isIndicator="false"
            app:star_max="5"
            app:star_orientation="horizontal"
            app:star_rating="2"
            app:star_solid="@mipmap/ic_star_yellow_selected"
            app:star_width="25dp" />



        </LinearLayout>



    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="760px"
        android:layout_marginBottom="200px"
        android:scrollbars="vertical"
        android:background="#ffffff"
        android:layout_margin="10px"
        android:id="@+id/lv_2"/>
    <LinearLayout
        android:layout_marginTop="80px"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonupdate"
            android:layout_margin="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_update_bg"/>



    </LinearLayout>
</LinearLayout>