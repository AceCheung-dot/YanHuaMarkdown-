<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_match"
    android:gravity="center">

    <ScrollView
        style="@style/match_wrap"
        tools:ignore="UselessParent">

        <LinearLayout
            style="@style/match_wrap"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/space_line2"
            >
            <ImageView
                android:id="@+id/img_error_crash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@mipmap/ic_error" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_line2"
                android:gravity="center"
                android:text="@string/error_occurred"
                android:textSize="@dimen/standard_title"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_restart_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_line2"
                android:text="@string/restart_app" />

            <Button
                android:id="@+id/btn_error_details"
                style="?borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/error_details"
                android:textColor="@color/red" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>